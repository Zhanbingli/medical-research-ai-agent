# =============================================================================
# Medical Literature Agent - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env
#
# SECURITY WARNING: Never commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# AI Provider API Keys (At least one is required)
# -----------------------------------------------------------------------------

# Anthropic Claude API Key
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Moonshot AI (Kimi) API Key
# Get your key from: https://platform.moonshot.cn/
KIMI_API_KEY=your_kimi_key_here

# Alibaba Cloud (Qwen/通义千问) API Key
# Get your key from: https://dashscope.console.aliyun.com/
QWEN_API_KEY=your_qwen_key_here

# Default AI provider (claude, kimi, or qwen)
DEFAULT_AI_PROVIDER=claude

# -----------------------------------------------------------------------------
# PubMed Configuration
# -----------------------------------------------------------------------------

# Your email for NCBI E-utilities (recommended for better rate limits)
# See: https://www.ncbi.nlm.nih.gov/books/NBK25497/
PUBMED_EMAIL=your_email@example.com

# Request delay between PubMed API calls (seconds)
# NCBI recommends max 3 requests per second without API key
PUBMED_REQUEST_DELAY=0.34

# -----------------------------------------------------------------------------
# Caching Configuration
# -----------------------------------------------------------------------------

# Enable/disable caching (true/false)
CACHE_ENABLED=true

# Cache directory path
CACHE_DIR=./cache

# Cache expiration time (days)
CACHE_EXPIRY_DAYS=7

# Maximum cache size per cache type (MB)
CACHE_SIZE_LIMIT_MB=500

# -----------------------------------------------------------------------------
# Cost Tracking Configuration
# -----------------------------------------------------------------------------

# Enable/disable cost tracking (true/false)
COST_TRACKING_ENABLED=true

# Daily spending limit (USD)
COST_DAILY_LIMIT=10.0

# Monthly spending limit (USD)
COST_MONTHLY_LIMIT=100.0

# Cost tracking storage file path
COST_STORAGE_PATH=./cache/usage_stats.json

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, leave commented for console-only logging)
# LOG_FILE=./logs/app.log

# Log format string (optional, uses default if not set)
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
